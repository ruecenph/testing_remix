{
  "include": ["remix.env.d.ts", "**/*.ts", "**/*.tsx","**/*.mjs", "lingui.config.js", "app/i18next.server.ts", "app/i18n.ts"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022", "ES2020"],
    "isolatedModules": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./app/*"]
    },

    // Remix takes care of building everything in `remix build`.
    "noEmit": true
  }
}
